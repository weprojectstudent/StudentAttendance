<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kittichot.studentattendance.UpdateHomework"
    android:background="@drawable/bg" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="หัวข้อการบ้าน"
        android:id="@+id/titlehomeworkup"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:textColor="#000000"
       />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtTitleHWup"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/titlehomeworkup"
        android:background="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รายละเอียดการบ้าน"
        android:id="@+id/txtDetailHWup"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/edtTitleHWup" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtDetailHWup"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtDetailHWup"
        android:background="#ffffff"
        android:textSize="25dp"
        android:lines="3"
        android:maxLines="3"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="กำหนดส่ง"
        android:id="@+id/txtdatesentHWup"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_below="@+id/edtDetailHWup"
        android:layout_toRightOf="@+id/titlehomeworkup"
        android:layout_toEndOf="@+id/titlehomeworkup"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageBtndatesentHWup"
        android:src="@drawable/calen"
        android:onClick="setdateup"
        android:layout_alignBottom="@+id/edtsetdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtsetdate"
        android:layout_below="@+id/txtdatesentHWup"
        android:layout_toRightOf="@+id/imageBtndatesentHWup"
        android:enabled="false"
        android:background="#ffffff"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="บันทึกอัพเดต"
        android:onClick="ClickupdateValueHomework"
        android:id="@+id/button6"
        android:layout_below="@+id/edtsetdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

</RelativeLayout>
