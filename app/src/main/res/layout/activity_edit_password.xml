<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kittichot.studentattendance.EditPasswordActivity"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username :"
        android:id="@+id/textView33"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_below="@+id/textView33"
        android:hint="Username :"
        android:maxLines="1"
        android:textSize="25dp"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รหัส 6 หลัก :"
        android:id="@+id/textView34"
        android:layout_below="@+id/editText6"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:inputType="numberPassword|numberSigned"
        android:ems="10"
        android:id="@+id/editText7"
        android:hint="กรอกรหัส 6 หลัก"
        android:layout_below="@+id/textView34"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:background="#ffffff"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ส่งรหัสทางอีเมล์"
        android:id="@+id/txtsendEmail"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/editText7"
        android:layout_toRightOf="@+id/editText7"
        android:layout_toEndOf="@+id/editText7"
        android:layout_marginLeft="20dp"
        android:textColorLink="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        android:textIsSelectable="false"
        android:singleLine="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change password"
        android:id="@+id/button13"
        android:onClick="clickchangepassword"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="กรอกรหัสผ่านใหม่"
        android:id="@+id/textView35"
        android:textSize="20dp"
        android:layout_below="@+id/txtsendEmail"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edttxtPassNew"
        android:layout_below="@+id/textView35"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:textSize="25dp"
        android:singleLine="true"
        android:inputType="textPassword" />
</RelativeLayout>
